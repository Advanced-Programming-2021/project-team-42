<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SceneController.Login">

    <Label fx:id="error" alignment="CENTER" layoutX="269.0" layoutY="548.0" prefHeight="27.0" prefWidth="362.0" text="invalid login! please try again" textAlignment="CENTER" textFill="#b80000" visible="false">
      <font>
         <Font name="System Bold Italic" size="18.0" />
      </font></Label>
    <Label layoutX="368.0" layoutY="260.0" prefHeight="17.0" prefWidth="68.0" text="username:" textFill="#bcc714">
      <font>
         <Font name="Book Antiqua Bold" size="14.0" />
      </font></Label>
    <TextField fx:id="userName" layoutX="368.0" layoutY="280.0" prefHeight="25.0" prefWidth="168.0" promptText="Username" />
    <Label layoutX="368.0" layoutY="310.0" prefHeight="17.0" prefWidth="68.0" text="password:" textFill="#bcc714">
      <font>
         <Font name="Book Antiqua Bold" size="14.0" />
      </font></Label>
   <PasswordField fx:id="passWord" layoutX="368.0" layoutY="330.0" prefHeight="25.0" prefWidth="168.0" promptText="Password" />
    <Button layoutX="368.0" layoutY="370.0" mnemonicParsing="false" onMouseClicked="#loginClicked" prefHeight="25.0" prefWidth="168.0" text="login" textFill="#277c7c">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Button>
    <Button layoutX="740.0" layoutY="561.0" mnemonicParsing="false" onMouseClicked="#moveToSignUp" prefHeight="25.0" prefWidth="68.0" text="sign up">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font></Button>
    <Button layoutX="818.0" layoutY="561.0" mnemonicParsing="false" onMouseClicked="#exitGame" style="-fx-background-color: #f85353;" text="exit game">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font></Button>

</Pane>
