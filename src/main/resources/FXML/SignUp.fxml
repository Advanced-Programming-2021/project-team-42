<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SceneController.SignUp">

    <Label layoutX="368.0" layoutY="260.0" prefHeight="20.0" prefWidth="68.0" text="username:" textFill="#3ec716">
      <font>
         <Font name="Book Antiqua Bold" size="14.0" />
      </font></Label>
    <TextField fx:id="userName" layoutX="368.0" layoutY="280.0" prefHeight="25.0" prefWidth="165.0" promptText="Username" />
    <Label layoutX="368.0" layoutY="310.0" prefHeight="20.0" prefWidth="68.0" text="nickname:" textFill="#3ec716">
      <font>
         <Font name="Book Antiqua Bold" size="14.0" />
      </font></Label>
    <TextField fx:id="nickName" layoutX="368.0" layoutY="330.0" prefHeight="25.0" prefWidth="165.0" promptText="Nickname" />
    <Label layoutX="368.0" layoutY="360.0" prefHeight="17.0" prefWidth="68.0" text="password:" textFill="#3ec716">
      <font>
         <Font name="Book Antiqua Bold" size="14.0" />
      </font></Label>
    <PasswordField fx:id="password" layoutX="368.0" layoutY="380.0" prefHeight="25.0" prefWidth="165.0" promptText="Password" />
    <Label fx:id="error" alignment="CENTER" layoutX="291.0" layoutY="548.0" prefHeight="27.0" prefWidth="340.0" text="invalid sign up! please try again" textAlignment="CENTER" textFill="#b90000" visible="false">
      <font>
         <Font name="System Bold Italic" size="18.0" />
      </font></Label>
    <Button layoutX="368.0" layoutY="423.0" mnemonicParsing="false" onMouseClicked="#signUpClicked" prefHeight="25.0" prefWidth="165.0" text="sign up" textFill="#277c7c">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Button>
    <Button layoutX="740.0" layoutY="561.0" mnemonicParsing="false" onMouseClicked="#moveToLogin" prefHeight="25.0" prefWidth="68.0" text="login" textAlignment="CENTER">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font></Button>
    <Button layoutX="818.0" layoutY="561.0" mnemonicParsing="false" onMouseClicked="#exitGame" style="-fx-background-color: #f85353;" text="exit game" textAlignment="CENTER">
      <font>
         <Font name="System Bold Italic" size="12.0" />
      </font></Button>

</Pane>
